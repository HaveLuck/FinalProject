@model IEnumerable<WebBigBlog.Models.TopicModel>

@{
   
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/lib/bootstrap/dist/js/angular.js"></script>
<script src="~/lib/bootstrap/dist/js/angular.min.js"></script>
<script src="~/Scripts/Topic.js"></script>


<div ng-app="myApp" ng-controller="TopicController">
    <button type="button" class="btn btn-primary float-right" ng-click="AddTopic()">Add New topic</button>

    <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover">
            <thead class="bg-info">
                <tr>
                    <th>STT</th>
                    <th>Name of topic</th>
                    <th>Description topic</th>
                    <th>Custom</th>

                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in lstTopic">
                    <td>{{$index+1}}</td>
                    <td>{{item.name_Topic}}</td>
                    <td>{{item.description_Topic}}</td>
                    <td>
                        <button title="Delete" class="btn btn-outline-danger" ng-confirm-click="Would you like to delete?"
                           ng-click="DeleteTopic(item.id)" type="button">
                            <i class="fa fa-trash" style="color:red"></i> Delete
                        </button>
                        <button title="Detail" class="btn btn-outline-info"
                                ng-click="DetailTopic(item.id)" type="button">
                            <i class="fa fa-info" style="color:deepskyblue"></i> Detail
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="modal" id="addNewTopic">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title">Create a new topic</h4>
                </div>
                @using (Html.BeginForm())
                {
                    <div class="modal-body">

                        <div class="form-body">
                            <div class="form-group">
                                <label>Name of Topic<span style="color:red">*</span></label>
                                <input type="text" name="courseName" id="courseName" class="form-control" ng-model="new.topicName">
                            </div>
                            <div class="form-group">
                                <label>Description of Topic</label>
                                <input type="text" name="descriptionCourse" id="descriptionCourse" class="form-control" ng-model="new.description">
                            </div>
                            
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div>
                            <button type="button" class="btn dark btn-outline" data-dismiss="modal">Close</button>
                            <button type="button" ng-click="Submit();" class="btn btn-info">Submit</button>
                        </div>


                    </div>
                }
            </div>
            <!-- /.modal-content -->
        </div>
    </div>

</div>
<style>
   

    .open-dialog {
        border-radius: 3px;
        margin: 10px
    }

    .confirmation-dialog {
        display: none
    }
  
</style>




